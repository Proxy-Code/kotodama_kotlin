<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Kotodama" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@android:color/transparent</item>

<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->

    </style>

    <style name="Theme.Kotodama" parent="Base.Theme.Kotodama" />

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/main_purple</item>
    </style>

    <style name="searchView">
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">#D2D2D2</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/main_purple</item>
        <item name="trackColor">@android:color/transparent</item>
    </style>

    <style name="CustomProgressBarLoading" parent="Widget.MaterialComponents.CircularProgressIndicator">

        <item name="indicatorColor">@array/progress_bar_colors</item>
        <item name="trackColor">@android:color/transparent</item>
    </style>

    <style name="roundedImgView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">17dp</item>
    </style>

    <style name="roundedImgViewLibrary">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Shape.Capsule" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="WhiteProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:progressTint">@color/white</item>
    </style>

</resources>