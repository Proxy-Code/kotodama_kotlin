
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.proksi.kotodama.fragments.Studio.FragmentIntro"
    android:background="@color/main_bg">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="50dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical"
>

    <ImageView
        android:layout_width="135dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/intro"
        android:layout_height="160dp"
         />

    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/light"
        android:text="Start your Studio Project  \nby pressing “New Draft”"
        android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/newDraftBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@drawable/radius15_bg_gradient"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/semi_bold"
            android:paddingVertical="15dp"
            android:text="New Draft +"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            />



    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/semi_bold"
        android:text="Draft"
        android:layout_marginBottom="20dp"
        android:textAlignment="textStart"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_draft"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/ltAnimation"
        android:layout_marginTop="20dp"
        app:lottie_rawRes="@raw/lottie"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/no_data_view"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/no_data_pana_1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="No Draft Yet"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/semi_bold"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
</androidx.core.widget.NestedScrollView>