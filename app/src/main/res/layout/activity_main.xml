    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:navGraph="@navigation/nav_graph"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:defaultNavHost="true"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="3"
        >
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_home_img"
                android:layout_marginBottom="2dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home_bottom"/>
            <TextView
                android:id="@+id/nav_home_text"
                android:text="Home"
                style="@style/nav_text_style"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nav_library"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_library_img"
                android:layout_width="24dp"
                android:layout_marginBottom="2dp"
                android:layout_height="24dp"
                android:src="@drawable/files_bottom"/>
            <TextView
                android:id="@+id/nav_library_text"
                style="@style/nav_text_style"
                android:text="Library"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/nav_settings_img"
                android:layout_width="24dp"
                android:layout_marginBottom="2dp"
                android:layout_height="24dp"
                android:src="@drawable/settings_bottom"/>
            <TextView
                android:id="@+id/nav_settings_text"
                style="@style/nav_text_style"
                android:text="Settings"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>