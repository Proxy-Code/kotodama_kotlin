<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F9"
    >

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/kotodama_logo_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/imageView8"
    android:layout_height="wrap_content">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/images"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        android:layout_marginTop="45dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/onb_2"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/onb_1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/on_girl"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_box"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:background="@drawable/radius15_bg_white"
        android:elevation="10dp"
        android:layout_marginTop="40dp"
        android:padding="12dp"
        android:layout_marginHorizontal="40dp"
        android:text="You can type any text and it will generate amazing text to speech for you!"
        android:fontFamily="@font/semi_bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/images"
        />


    <TextView
        android:id="@+id/continueBtn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:background="@drawable/radius15_bg_gradient"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/semi_bold"
        android:paddingVertical="15dp"
        android:text="@string/create"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/text_last"
        android:visibility="gone"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/bold"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:text="Best Text To Speech app for creative minds."
        android:layout_height="wrap_content"/>
</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>