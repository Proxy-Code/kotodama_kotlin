<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/radius_12_white"
    android:layout_marginHorizontal="30dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/info_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="35dp"
            android:paddingTop="2dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_info_24"
            app:tint="@color/main_purple" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:textSize="15sp"
        android:fontFamily="@font/regular"
        android:textColor="@color/black"
        android:text="Below verbal tags will be recognized, but might result in unexpected output."
        app:layout_constraintTop_toBottomOf="@id/info_btn"
        android:layout_height="wrap_content"/>

    <HorizontalScrollView
        android:id="@+id/list"
        android:paddingTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/content"
        android:layout_width="match_parent"
        android:layout_marginVertical="8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="14dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="(laughs)"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/main_purple"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="(coughs)"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/main_purple"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="(clear throat)"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/main_purple"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="(singing)"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/main_purple"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="(gasps)"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/main_purple"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="(mumble)"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/main_purple"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="(applause)"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/main_purple"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="(humming)"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/main_purple"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </HorizontalScrollView>
    <TextView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:textColor="@color/com_facebook_blue"
        android:text="Close"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/medium"
        app:layout_constraintTop_toBottomOf="@id/list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"/>









</androidx.constraintlayout.widget.ConstraintLayout>