<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_bg"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:src="@drawable/backbtn"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:elevation="5dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:contentDescription="image"
            android:elevation="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/clone_first_progress" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:fontFamily="@font/bold"
            android:text="Kotodama"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="245dp"
            android:layout_below="@id/title"
            android:layout_marginStart="20dp"
            android:layout_marginTop="42dp"
            android:src="@drawable/sing_song_frame" />

        <TextView
            android:id="@+id/step1"
            android:layout_below="@id/title"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:text="Step 1"
            android:textSize="12sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/step1"
            android:id="@+id/upload_voice"
            android:layout_marginTop="2dp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:text="Upload Your Voice"
            android:textSize="13sp"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/upload_voice"
            android:id="@+id/content1"
            android:layout_marginTop="2dp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:text="Upload or record your voice."
            android:textSize="12sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/step2"
            android:layout_below="@id/content1"
            android:layout_marginTop="55dp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:text="Step 2"
            android:textSize="12sp"
            android:fontFamily="@font/regular"
            android:textColor="#5A5757"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/step2"
            android:id="@+id/step2_title"
            android:layout_marginTop="2dp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:text="Let AI Do Its Magic"
            android:textSize="13sp"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/content_2"
            android:layout_below="@id/step2_title"
            android:layout_marginTop="2dp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:paddingEnd="50dp"
            android:text="Kotodama AI is going to create q custom voice with your recordings."
            android:textSize="12sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/step3"
            android:layout_below="@id/content_2"
            android:layout_marginTop="40dp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:text="Step 3"
            android:textSize="12sp"
            android:fontFamily="@font/regular"
            android:textColor="#5A5757"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@id/step3"
            android:id="@+id/step3_title"
            android:layout_marginTop="2dp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:text="Your Unique AI Voice is Ready"
            android:textSize="13sp"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/content_3"
            android:layout_below="@id/step3_title"
            android:layout_marginTop="2dp"
            android:paddingEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_width="wrap_content"
            android:text="Use your custom voice and say anything!"
            android:textSize="12sp"
            android:fontFamily="@font/regular"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/create_btn_active"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>