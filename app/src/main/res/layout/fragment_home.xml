<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="20dp"
    android:paddingTop="50dp"
    android:layout_above="@+id/bottomNavigationView"
    android:layout_height="match_parent">
<androidx.core.widget.NestedScrollView

    android:id="@+id/homeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="homePage"
    android:fillViewport="true"
    android:paddingHorizontal="24dp"
    android:background="@color/main_bg"

    tools:context=".fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <androidx.constraintlayout.widget.ConstraintLayout

           android:layout_width="100dp"
           android:id="@+id/remaningCounterLayout"
           android:layout_height="42dp"
           android:layout_marginTop="8dp"
           android:background="@drawable/radius11_bg_white">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="9dp"
               android:layout_marginTop="4dp"
               android:fontFamily="@font/medium"
               android:text="Remaining"
               android:textColor="@color/main_purple"
               android:textSize="11sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="9dp"
               android:layout_marginBottom="7dp"
               android:fontFamily="@font/semi_bold"
               android:text="20,000"
               android:textColor="@color/black"
               android:textSize="11sp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent" />

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="9dp"
               android:src="@drawable/icon_plus"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.5" />

       </androidx.constraintlayout.widget.ConstraintLayout>

       <ImageView
           android:id="@+id/imageCrown"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:layout_alignParentEnd="true"
           android:background="@drawable/rounded_crown"
           android:contentDescription="@string/app_name"
           android:paddingHorizontal="8dp"
           android:paddingVertical="8dp"
           android:src="@drawable/crown_white" />

       <LinearLayout
           android:id="@+id/counterLayout"
           android:layout_width="53dp"
           android:layout_height="43dp"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="8dp"
           android:layout_marginEnd="49dp"
           android:background="@drawable/radius_12_white"
           android:gravity="center"
           android:orientation="horizontal">


           <TextView
               android:id="@+id/tokenCounterText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/bold"
               android:text="3"
               android:paddingStart="10dp"
               android:textColor="@color/main_purple"
               android:textSize="20dp" />

           <ImageView
               android:id="@+id/imageView3"
               android:layout_width="25dp"
               android:layout_height="35dp"
               android:layout_weight="1"
               android:paddingEnd="5dp"
               android:src="@drawable/icon_counter" />
       </LinearLayout>

       <FrameLayout
           android:id="@+id/textFrameLayout"
           android:layout_marginTop="60dp"
           android:background="@drawable/radius15_bg_white"
           android:layout_width="match_parent"
           android:padding="14dp"
           android:layout_height="190dp">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingBottom="35dp"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/selectedImg"
                   android:layout_width="45dp"
                   android:scaleType="centerCrop"
                 android:visibility="gone"
                   android:layout_height="45dp"
                   android:src="@drawable/fotow22"
                   android:layout_gravity="center_vertical"/>

               <EditText
                   android:id="@+id/editTextLayout"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:inputType="textMultiLine"
                   android:textColor="@color/black"
                   android:textSize="12sp"

                   android:textColorHint="#C1C1C1"
                   android:fontFamily="@font/regular"
                   android:hint="Type here for your AI speech!"
                   android:background="@null"
                   android:scrollHorizontally="false"
                   android:minLines="3"
                   android:singleLine="false"
                   android:paddingStart="8dp"/>
           </LinearLayout>
           <LinearLayout
               android:visibility="gone"
               android:id="@+id/langCodeLayout"
               android:layout_width="wrap_content"
               android:background="@drawable/radius11_purple"
               android:gravity="center"
               android:layout_gravity="bottom"
               android:paddingVertical="5dp"
               android:paddingHorizontal="9dp"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/langCodeImg"
                   android:layout_width="8dp"
                   android:src="@drawable/circle_red"
                   android:layout_marginEnd="3dp"
                   android:layout_height="8dp"/>
               <TextView
                   android:id="@+id/langCode"
                   android:text="Unknown"
                   android:textColor="@color/white"
                   android:textSize="10sp"
                   android:fontFamily="@font/medium"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>

       </FrameLayout>

       <SearchView
           android:layout_below="@+id/textFrameLayout"
           android:id="@+id/searchVoice"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:background="@drawable/radius14_bg_white"
           android:focusable="false"
           android:searchIcon="@drawable/icon_search"
           android:focusableInTouchMode="false"
           android:iconifiedByDefault="false"
           android:inputType="text"
           android:minHeight="48dp"
           android:queryBackground="@android:color/transparent"
           android:queryHint="Search"
           android:theme="@style/searchView"
           app:layout_constraintEnd_toEndOf="parent"
           />
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recycler_view_categories"
           android:layout_below="@+id/searchVoice"
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recycler_view_voices"
           android:layout_below="@+id/recycler_view_categories"
           android:layout_width="match_parent"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="160dp"
           android:layout_height="wrap_content"/>


   </RelativeLayout>


</androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/buttonCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
       android:layout_marginHorizontal="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp"
        android:text="Create"

        android:textSize="18sp"
        android:fontFamily="@font/bold"
        android:paddingVertical="15dp"
        android:background="@drawable/create_btn_inactive"
        android:textColor="@color/white" />
    <View
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="gone" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
