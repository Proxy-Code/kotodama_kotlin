<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F9">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/kotodama_logo_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:paddingHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/imageView8"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:fontFamily="@font/medium"
        android:text="Clone Your Voice and speak in 30+ languages"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@id/img_girl"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/booble"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/flags_img"
            android:layout_width="65dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:src="@drawable/flags_1"
            android:layout_height="40dp"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/continueBtn"
        android:layout_width="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:padding="20dp"
        android:src="@drawable/baseline_east_24"
        android:layout_marginBottom="20dp"
        android:background="@drawable/circle_grey"
        android:layout_height="70dp"
        app:tint="@color/main_purple" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_girl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onb_page_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>