<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F4F9"
    android:paddingTop="50dp"
    tools:context="com.proksi.kotodama.fragments.Studio.StudioTextFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/remaningCounterLayout"
        android:layout_marginStart="20dp"
        android:background="@drawable/radius11_bg_white"
        android:layout_width="wrap_content"
        android:paddingHorizontal="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/remaning_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:text="Remaining"
            android:paddingTop="8dp"
            android:textColor="@color/main_purple"
            android:textSize="10sp"
            android:fontFamily="@font/medium"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/remaning_count"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/remaning_text"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:fontFamily="@font/semi_bold"
            android:text=""
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/remaning_text"
            android:background="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="1dp"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icon_plus"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_marginEnd="20dp"
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/close_btn"
        app:layout_constraintBottom_toTopOf="@id/choose_character_btn"
        android:id="@+id/textFrameLayout"
        android:layout_marginTop="30dp"
        android:elevation="10dp"
        android:background="@drawable/radius15_bg_white"
        android:layout_width="match_parent"
        android:padding="14dp"
        android:minHeight="150dp"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="35dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textColorHint="#C1C1C1"
                android:fontFamily="@font/regular"
                android:hint="@string/typeHereFor"
                android:background="@null"
                android:scrollHorizontally="false"
                android:minLines="3"
                android:singleLine="false"
                android:paddingStart="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/langCodeLayout"
            android:layout_width="wrap_content"
            android:background="@drawable/radius11_purple"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:paddingVertical="5dp"
            android:paddingHorizontal="9dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/langCodeImg"
                android:layout_width="8dp"
                android:src="@drawable/circle_red"
                android:layout_marginEnd="3dp"
                android:layout_height="8dp"/>
            <TextView
                android:id="@+id/langCode"
                android:text="Unknown"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:fontFamily="@font/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/deleteLayout"
            android:layout_width="wrap_content"
            android:background="@drawable/circle_purple"
            android:gravity="center"
            android:layout_gravity="bottom|end"
            android:paddingVertical="3dp"
            android:layout_marginEnd="50dp"
            android:paddingHorizontal="3dp"
            android:layout_height="24dp">

            <ImageView
                android:id="@+id/delete"
                android:src="@drawable/deletetrash"
                android:textColor="@color/white"
                android:fontFamily="@font/medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/doneLayout"
            android:layout_width="wrap_content"
            android:background="@drawable/radius11_purple"
            android:gravity="center"
            android:layout_gravity="bottom|end"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/done"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:fontFamily="@font/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/choose_character_btn"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius15_bg_white"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textFrameLayout"
        app:layout_constraintBottom_toTopOf="@id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/choose_img_empty"
            android:layout_width="42dp"
            android:src="@drawable/baseline_person_24"
            android:padding="8dp"
            android:background="@drawable/circle_grey"
            android:layout_height="42dp"
            android:visibility="gone"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/img_choosen"
            android:background="@drawable/radius10"
            android:layout_width="42dp"
            android:src="@drawable/kpop"
            android:layout_height="42dp"/>


        <TextView
            android:id="@+id/choose_text"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/semi_bold"
            android:text="Choose Character"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginVertical="20dp"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@id/info_container"
        app:layout_constraintTop_toBottomOf="@id/choose_character_btn"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/delete_btn"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:background="@drawable/radius15_bg_white"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/progress_red"
                android:text="Delete"
                android:fontFamily="@font/semi_bold"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="24dp"
                android:src="@drawable/deletetrash"
                android:layout_height="24dp"
                app:tint="@color/progress_red" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listen_btn"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:paddingVertical="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/radius15_bg_white"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/listen_btn_text"
                android:layout_width="wrap_content"
                android:textColor="@color/gray"
                android:text="Listen"
                android:fontFamily="@font/semi_bold"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/listen_btn_img"
                android:layout_width="24dp"
                android:src="@drawable/play_circle"
                android:layout_height="24dp"
                app:tint="@color/gray" />
        </LinearLayout>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

   <LinearLayout
       app:layout_constraintTop_toBottomOf="@+id/btn_container"
       app:layout_constraintBottom_toTopOf="@id/createBtn"
       android:layout_marginHorizontal="20dp"
       android:layout_marginTop="20dp"
       android:id="@+id/info_container"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="wrap_content"
           android:text="Information:"
           android:textSize="13sp"
           android:fontFamily="@font/semi_bold"
           android:layout_gravity="center_vertical"
           android:drawablePadding="5dp"
           android:drawableStart="@drawable/baseline_info_24"
           android:drawableTint="@color/main_purple"
           android:textColor="@color/black"
           android:layout_height="wrap_content"/>

       <TextView
           android:id="@+id/infoTextView"
           android:paddingStart="20dp"
           android:layout_width="wrap_content"
           android:textSize="13sp"
           android:fontFamily="@font/regular"
           android:layout_gravity="center_vertical"
           android:textColor="@color/black"
           android:layout_height="wrap_content"/>
   </LinearLayout>

    <FrameLayout
        android:id="@+id/createBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="60dp"
        android:elevation="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/create_btn_inactive"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="20dp"
        >
            <TextView
                android:id="@+id/text_create"
                android:layout_width="match_parent"
                android:text="Create"
                android:paddingVertical="15dp"
                android:fontFamily="@font/semi_bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/ltAnimation"
            android:visibility="gone"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/lottie"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            />

    </FrameLayout>

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/paywallComposeView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>