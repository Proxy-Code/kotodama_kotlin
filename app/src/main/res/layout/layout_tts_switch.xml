<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/switch_background"
    android:paddingVertical="10dp">

    <!-- Seçim göstergesi -->
    <View
        android:id="@+id/selectedIndicator"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/indicator_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ttsButton"
        app:layout_constraintEnd_toEndOf="@id/ttsButton" />

    <!-- TTS Butonu -->
    <TextView
        android:id="@+id/ttsButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Text to Speech"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stsButton"
        app:layout_constraintWidth_percent="0.5" />

    <!-- STS Butonu -->
    <TextView
        android:id="@+id/stsButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Speech to Speech"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/ttsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <ImageView
        android:id="@+id/info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_info_24"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>