<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F9"
    android:paddingBottom="20dp"

    >

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/kotodama_logo_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/box_1"
            android:layout_width="match_parent"
            android:background="@drawable/radius15_bg_white"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="48dp"
                android:src="@drawable/on_girl"
                android:layout_height="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:text="I need to create a video for my..."
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="24dp"
                android:padding="3dp"
                android:background="@drawable/circle_purple"
                android:src="@drawable/baseline_play_arrow_24"
                android:layout_height="24dp"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/box_2"
            android:layout_width="match_parent"
            android:background="@drawable/radius15_bg_white"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="48dp"
                android:src="@drawable/onb_1"
                android:layout_height="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:text="Oh, is that due today?"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="24dp"
                android:padding="3dp"
                android:background="@drawable/circle_purple"
                android:src="@drawable/baseline_play_arrow_24"
                android:layout_height="24dp"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/box_3"
            android:layout_width="match_parent"
            android:background="@drawable/radius15_bg_white"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="48dp"
                android:src="@drawable/on_girl"
                android:layout_height="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:text="I don’t have time to record my audio"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="24dp"
                android:padding="3dp"
                android:background="@drawable/circle_purple"
                android:src="@drawable/baseline_play_arrow_24"
                android:layout_height="24dp"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/box_4"
            android:layout_width="match_parent"
            android:background="@drawable/radius15_bg_white"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="48dp"
                android:src="@drawable/onb_1"
                android:layout_height="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:text="Why don’t you use Kotodama AI?"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="24dp"
                android:padding="3dp"
                android:background="@drawable/circle_purple"
                android:src="@drawable/baseline_play_arrow_24"
                android:layout_height="24dp"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/box_5"
            android:layout_width="match_parent"
            android:background="@drawable/radius15_bg_white"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="48dp"
                android:src="@drawable/on_girl"
                android:layout_height="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:text="Kotodama AI?"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="24dp"
                android:padding="3dp"
                android:background="@drawable/circle_purple"
                android:src="@drawable/baseline_play_arrow_24"
                android:layout_height="24dp"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/box_6"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:background="@drawable/radius15_bg_white"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="48dp"
                android:src="@drawable/onb_1"
                android:layout_height="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:text="Yeah, it’s the Text To Speech app"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="24dp"
                android:padding="3dp"
                android:background="@drawable/circle_purple"
                android:src="@drawable/baseline_play_arrow_24"
                android:layout_height="24dp"
                app:tint="@color/white" />

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text"
            android:background="@drawable/radius15_bg_gradient"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="40dp"
            android:fontFamily="@font/semi_bold"
            android:paddingVertical="15dp"
            android:text="@string/create"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/text_last"
            android:layout_width="match_parent"
            android:fontFamily="@font/medium"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:paddingHorizontal="10dp"
            android:textAlignment="center"
            android:text="Studio feature to create real like conversation!"
            android:layout_height="wrap_content"/>


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>