<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/radius11_bg_white"
    android:layout_marginBottom="10dp"
    android:paddingTop="8dp"
    android:paddingBottom="11dp"
    android:paddingHorizontal="7dp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cardImgView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/main_bg"
        android:padding="3dp"
        android:src="@drawable/fotow22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037"
        app:shapeAppearanceOverlay="@style/roundedImgViewLibrary"
        app:strokeColor="@android:color/transparent"
        app:strokeWidth="3dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/medium"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/cardImgView"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />


    <ImageView
        android:id="@+id/send_button"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/send_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        style="@style/CustomProgressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="16dp"
        app:indicatorSize="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Accordion Layout -->
    <LinearLayout
        android:id="@+id/accordionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImgView">

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:lineHeight="21dp"
            android:paddingHorizontal="20dp"
            android:text="Java is a high-level, class-based, object-oriented programming language that is designed to have as few implementation dependencies as possible."
            android:textColor="#4D4A4A"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/startTime"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="0:00"
            android:paddingHorizontal="15dp"
            android:textColor="#767272"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />


        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@null" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/plusButton"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:src="@drawable/fiveplus"
                app:tint="@color/main_purple" />

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/play_lib"
                app:tint="@color/main_purple" />

            <ImageView
                android:id="@+id/minusButton"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:paddingVertical="5dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:src="@drawable/fiveminus"
                app:tint="@color/main_purple" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>